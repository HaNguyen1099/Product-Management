extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3 
        .row 
            .col-12
                +box-head("Danh sách sản phẩm")

        .row 
            each i in products
                .col-4.mb-3 
                    .product-item 
                        .inner-image 
                            img(src=i.thumbnail, alt=i.title)
                        .inner-content 
                            h3.inner-title 
                                a(href=`/products/${i.slug}`) #{i.title}
                            .inner-price-new #{i.priceNew}$
                            .inner-price-old #{i.price}$
                            .inner-discount #{i.discountPercentage}%
