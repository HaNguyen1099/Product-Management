extends ../../layouts/default.pug
include ../../mixins/box-head.pug 

block main 
    .container.my-3 
        .row
            .col-12
                +box-head("Chat")
        
        .row 
            .col-12 
                .chat(my-id=user.id) 
                    .inner-head 
                        .inner-avatar 
                        .inner-name
                    .inner-body 
                        .inner-name
                        .inner-content 

                    .inner-foot 
                        form(
                            class="inner-form"
                            action=""
                        )
                            input(
                                type="text"
                                placeholder="Nhập nội dung..."
                                name="content"
                            )
                            button
                                i.fa-solid.fa-paper-plane




                