extends ../../layouts/default.pug 

include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug

block main 
    +alert-success(3000)
    +alert-error(3000)

    if (role.permissions.includes("accounts_view"))
        h1(class="mb-4") Danh sách tài khoản 

        .card.mb-3 
            .card-header Bộ lọc và Tìm kiếm 
            .card-body 
                .row
                    .col-6
                        +filter-status(filterStatus)
                    .col-6 
                        +search(keyword)

        .card.mb-3 
            .card-header Danh sách 
            .card-body 
                .row 
                    .col-8 
                    .col-4.text-right
                        if (role.permissions.includes("accounts_create")) 
                            a(
                                href=`${prefixAdmin}/accounts/create`
                                class="btn btn-outline-success"
                            ) + Thêm mới 
                
                table(
                    class="table table-hover table-sm mt-3"
                )
                    thead 
                        tr 
                            th STT 
                            th Avatar 
                            th Họ tên 
                            th Phân quyền 
                            th Email 
                            th Trạng thái 
                            th Hành động
                    
                    tbody 
                        if (records.length > 0) 
                            each i, index in records 
                                tr 
                                    td #{index + 1}
                                    td 
                                        img(
                                            src=i.avatar 
                                            alt=i.fullName 
                                            width="100px"
                                            height="auto"
                                        ) 
                                    td #{i.fullName} 
                                    td #{i.role.title} 
                                    td #{i.email}
                                    td 
                                        if (role.permissions.includes("accounts_edit")) 
                                            if(i.status == 'active')
                                                a(   
                                                    href=("javascript:;") 
                                                    data-status="active"
                                                    data-id=i.id
                                                    button-change-status
                                                    class="badge badge-success"
                                                ) Hoạt động 
                                            else if (i.status == 'inactive')
                                                a(
                                                    href=("javascript:;") 
                                                    data-status="inactive" 
                                                    data-id=i.id
                                                    button-change-status
                                                    class="badge badge-danger"
                                                ) Ngừng hoạt động 
                                        else 
                                            if(i.status == 'active')
                                                span(    
                                                    class="badge badge-success"
                                                ) Hoạt động 
                                            else if (i.status == 'inactive')
                                                span(
                                                    class="badge badge-danger"
                                                ) Ngừng hoạt động 
                                    td 
                                        a(
                                            class="btn btn-secondary btn-sm"
                                            href=`${prefixAdmin}/accounts/detail/${i.id}`
                                        ) Chi tiết 
                                        if (role.permissions.includes("accounts_edit"))
                                            a(
                                                class="btn btn-warning btn-sm ml-1"
                                                href=`${prefixAdmin}/accounts/edit/${i.id}`
                                            ) Sửa
                                        if (role.permissions.includes("accounts_delete"))
                                            button(
                                                data-id = i.id
                                                button-delete
                                                class="btn btn-danger btn-sm ml-1"
                                            ) Xóa
                        else 
                            tr 
                                td(colspan="4" class="text-center") Chưa có tài khoản được tạo.

        form(
            action="", 
            method="POST",
            id="form-change-status",
            data-path=`${prefixAdmin}/accounts/change-status`
        ) 

        form(
            action="", 
            method="POST",
            id="form-delete-item",
            data-path=`${prefixAdmin}/accounts/delete`
        ) 

        if (pagination.totalPage > 1)                       
            +pagination(pagination)
        
        script(src="/admin/js/account.js") 

    else             
        h1 Bạn không có quyền truy cập trang web này!

