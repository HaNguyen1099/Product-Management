extends ../../layouts/default.pug

block main 
    h1 Trang danh sách sản phẩm

    table(class="table table-hover table-sm")
        thead 
            tr
                th STT 
                th Hình ảnh 
                th Tiêu đề
                th Giá
                th Trạng thái 
                th Hành động
        tbody
                tr 
                    td 1
                    td 
                        img(src="" alt="Sản phẩm 1" width="100px" height="auto")
                    td "Sản phẩm 1"
                    td "100$"
                    td 
                        a(href="#" class="badge badge-danger") Ngừng hoạt động 
                    td 
                        button(class="btn btn-warning btn-sm ml-1") Sửa
                        button(class="btn btn-danger btn-sm ml-1") Xóa
                tr 
                    td 2
                    td 
                        img(src="" alt="Sản phẩm 2" width="100px" height="auto")
                    td "Sản phẩm 2"
                    td "199$"
                    td 
                        a(href="#" class="badge badge-success") Hoạt động     
                    td 
                        button(class="btn btn-warning btn-sm ml-1") Sửa
                        button(class="btn btn-danger btn-sm ml-1") Xóa