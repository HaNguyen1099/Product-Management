extends ../../layouts/default.pug 
include ../../mixins/alert.pug
include ../../mixins/moment.pug

block main 
    +alert-success(3000)
    +alert-error(3000)
    if (role.permissions.includes("roles_view"))
        h1(class="mb-4") Nhóm quyền 

        .card.mb-3 
            .card-header Danh sách 
            .card-body 
                .row 
                    .col-9 
                    .col-3
                        if (role.permissions.includes("roles_create"))
                            a(
                                href=`${prefixAdmin}/roles/create`
                                class="btn btn-outline-success"
                            ) +Thêm mới 
                
                table(
                    class="table table-hover table-sm mt-3"
                )
                    thead 
                        tr 
                            th STT 
                            th Nhóm quyền 
                            th Mô tả ngắn 
                            th Người tạo
                            th Hành động
                    
                    tbody 
                        if (records.length > 0) 
                            each i, index in records 
                                tr 
                                    td #{index + 1} 
                                    td #{i.title} 
                                    td #{i.description}
                                    td 
                                        p #{i.accountFullName}
                                        p 
                                            +formatDateTime(i.createdBy.createdAt)
                                    td 
                                        a(
                                            class="btn btn-secondary btn-sm"
                                            href=`${prefixAdmin}/roles/detail/${i.id}`
                                        ) Chi tiết
                                        if (role.permissions.includes("roles_edit"))
                                            a(
                                                class="btn btn-warning btn-sm ml-1"
                                                href=`${prefixAdmin}/roles/edit/${i.id}`
                                            ) Sửa
                                        if (role.permissions.includes("roles_delete"))
                                            button(
                                                class="btn btn-danger btn-sm ml-1"
                                                data-id = i.id
                                                button-delete
                                            ) Xóa
                        else 
                            tr 
                                td(colspan="4" class="text-center") Chưa có nhóm quyền được tạo.

        form(
            action="", 
            method="POST",
            id="form-delete-item",
            data-path=`${prefixAdmin}/roles/delete`
        ) 

        script(src="/admin/js/role.js") 

    else             
        h1 Bạn không có quyền truy cập trang web này!